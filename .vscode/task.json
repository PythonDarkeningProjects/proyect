{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "TypeScript Compiler",
            "type": "shell",
            "command": "tsc",
            "args": [
                "-p",
                ".vscode/../ts",
                "--watch"
            ],
            "problemMatcher": "$tsc",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ]
}

